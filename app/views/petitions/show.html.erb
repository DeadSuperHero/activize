<p id="notice"><%= notice %></p>


<div id="petition-container", class="col-xs-8">
  <div id="petition">

<% if @petition.user == current_user %>
    <%= link_to 'Edit', edit_petition_path(@petition) %>
    <%= link_to "Delete", @petition, method: :delete, data: { confirm: 'Are you sure?'} %>
<% end %>


      <%= @petition.cover %>
      <h2><%= @petition.title %></h2>


      <div id="author">
        <%= @petition.user.email if @petition.user %>
      </div>

      <div class="date">
        <%= @petition.created_at %>
      </div>

      <div class="target">
       <b>Petition to:</b> <%= @petition.target %>
      </div>

      <div class="signum">
        <b>Signatures needed:</b> <%= @petition.signum %>
      </div>

      <div class="description">
      <%= markdown(@petition.description) %>
      </div>
    </div>
</div>